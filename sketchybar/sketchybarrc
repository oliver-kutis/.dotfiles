#!/bin/bash
source "$CONFIG_DIR/colors.sh" # Loads all defined colors

PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

bracket_defaults=(
  background.color=$BAR_COLOR   
  background.corner_radius=30  
  background.height=30  
  # background.drawing=on
)

##### Bar Appearance #####
bar=(
  # corner_radius=12
  height=33
  color=$TRANSPARENT
  border_width=1
  border_color=$TRANSPARENT
  shadow=off
  position=top
  sticky=on
  y_offset=0
  padding_left=4
  padding_right=4
  margin=5
  topmost=window
)

sketchybar --bar "${bar[@]}"

##### Changing Defaults #####

default=(
  padding_left=5
  padding_right=5
  icon.font="SF Pro:Semibold:14.0"
  label.font="SF Pro:Semibold:14.0"
  icon.color=$WHITE
  label.color=$WHITE
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
  border_width=2
)
sketchybar --default "${default[@]}"

##### Adding Left Items #####
source "$ITEM_DIR/spaces.sh"
source "$ITEM_DIR/front_app.sh"
sketchybar --add bracket spaces space_separator front_app space.1 \
            --set spaces "${bracket_defaults[@]}" \

##### Adding Right Items #####
# source "$ITEM_DIR/media.sh"
source "$ITEM_DIR/calendar.sh"
source "$ITEM_DIR/volume.sh"
source "$ITEM_DIR/battery.sh"

sketchybar --add bracket status battery volume calendar \
            --set status "${bracket_defaults[@]}" \

# Finishing the setup
sketchybar --hotload on
sketchybar --update
